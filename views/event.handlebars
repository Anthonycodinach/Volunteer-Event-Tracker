<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Event:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Event Name:</label>
        <input class="form-input" type="text" id="event-name" name="event-name" />
      </div>
      <div class="form-group">
        <label for="project-name">Event Description:</label>
        <input class="form-input" type="text" id="event-desc" name="event-desc" />
      </div>
      <div class="form-group">
        <label for="project-name">Event Start Date:</label>
        <input class="form-input" type="text" id="event-start-date" name="event-start-date" />
      </div>
       <div class="form-group">
        <label for="project-name">Event End Date:</label>
        <input class="form-input" type="text" id="event-end-date" name="event-end-date" />
      </div>
     <div class="form-group">
        <label for="project-name">Event Start Time:</label>
        <input class="form-input" type="text" id="event-start-time" name="event-start-time" />
      </div>
      <div class="form-group">
        <label for="project-name">Event End Time:</label>
        <input class="form-input" type="text" id="event-end-time" name="event-end-time" />
      </div>
      <div class="form-group">
        <label for="project-name">Event Image Link:</label>
        <input class="form-input" type="text" id="event-img" name="event-img" />
      </div>
      <div class="form-group">
        <button type="submit" class="event-submit-btn">Create</button>
      </div>
       <div class="form-group">
        <button type="submit" class="event-remove-btn">Destroy</button>
      </div>
  </div>
  <script src="/js/profile.js" ></script>
   
